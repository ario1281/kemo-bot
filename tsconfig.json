{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "baseUrl": "./",
  "paths": {
    "@/*": ["app/*"],
    "@api/*": ["api/*"]
  },
  "include": ["app/**/*", "api/**/*"]
}